<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.myappersent.MyCircle
        android:id="@+id/mycircle"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <com.example.myappersent.MyImage
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.example.myappersent.MyLine
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.example.myappersent.MyMoreSide
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.example.myappersent.MyRecView
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <com.example.myappersent.MyTextView
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <com.example.myappersent.BallView
        android:background="#00f"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <Button
        android:id="@+id/btn_start"
        android:layout_marginTop="10dp"
        android:text="进度开始"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>